<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="me.mariotti.timebank.ListingDetailActivity">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/descriptionText"
            style="@style/AppTheme" android:editable="false" android:elevation="3dp"
            android:elegantTextHeight="false" android:gravity="top|center_vertical|start"
            android:theme="@style/AppTheme" android:layout_marginBottom="14dp" android:minHeight="30dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="0dp" android:minHeight="30dp" android:gravity="center_vertical|start">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/category_label"
                  android:id="@+id/categoryLabel"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="categoryText"
                  android:id="@+id/categoryText"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp" android:minHeight="30dp" android:gravity="center_vertical|start">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_label"
                android:id="@+id/dateLabel"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dateText"
                android:id="@+id/dateText" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="0dp" android:minHeight="30dp" android:gravity="center_vertical|start">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/requested" android:id="@+id/requested_label" android:layout_weight="0"/>
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/checkBox_requested" android:clickable="false" android:layout_weight="0"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:gravity="center_vertical|end">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/listing_detail__applicant" android:id="@+id/listing_detail__applicant_name_label"
                      android:gravity="end" android:layout_weight="0"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="dateText"
                      android:id="@+id/listing_detail__applicant_name" android:gravity="right" android:layout_weight="0"
                    />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_text"
                android:id="@+id/claimButton" android:layout_gravity="center_horizontal"
                />
    </LinearLayout>

</LinearLayout>
