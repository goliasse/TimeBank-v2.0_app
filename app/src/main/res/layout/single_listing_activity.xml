<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="me.mariotti.timebank.SingleListingActivity">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/descriptionText"
            style="@style/AppTheme" android:editable="false" android:elevation="3dp"
            android:elegantTextHeight="false" android:gravity="center_horizontal|top"
            android:theme="@style/AppTheme" android:maxHeight="100dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/category_label"
                  android:id="@+id/categoryLabel"/>
        <Space android:layout_width="20dp" android:layout_height="20dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="categoryText"
                  android:id="@+id/categoryText"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_label"
                android:id="@+id/dateLabel"/>
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dateText"
                android:id="@+id/dateText" android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/requested" android:id="@+id/textView"/>
        <Space
                android:layout_width="20px"
                android:layout_height="20px"
                />
        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/checkBox_requested" android:clickable="false"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_text"
                android:id="@+id/claimButton" android:layout_gravity="center_horizontal"
                />
    </LinearLayout>

</LinearLayout>
